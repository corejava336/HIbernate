<!DOCTYPE hibernate-mapping SYSTEM "file:///D:/JAVA/HIBERNATE/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.nt.entity.Customer" table="customer">
		<id name="id">
